---
// import Navigation from "../components/Navigation.astro";
import Header from "../components/Header.astro";
import '../styles/global.css';

const pageTitle = "ABOUT ME";

const identity = {
    firstName: "pegasus",
    country: "China",
    occupation: "tech",
    hobbies: ["running", "coding"],
};

const skills = ["C++", "QT", "Astro", "HTML"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <!-- <title>About</title> -->
        <title>{pageTitle}</title>

        <style define:vars={{skillColor, fontWeight, textCase}}>
            h1{
                color: purple;
                font-size: 4rem;
            }
            .skill{
                /* color: green; */
                color: var(--skillColor);
                font-weight: var(--fontWeight);
                text-transform: var(--textCase);
            }
        </style>
        
    </head>
    <body>
        <!-- <a href="/">Home</a>
        <a href="/about/">About</a>
        <a href="/blog/">Blog</a> -->
        <!-- <Navigation /> -->
        <Header />

        <h1>{pageTitle}</h1>

        <p>Some info: </p>
        <ul>
            <li>Name: {identity.firstName}</li>
            <li>Live in: {identity.country}</li>
            <li>Work: {identity.occupation}</li>
            {identity.hobbies.length >=2 && 
            <li>Hobbies: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
            }
        </ul>

        <p>Skills: </p>
        <ul>
            {skills.map(skill => <li class="skill">{skill}</li>)}
        </ul>

        {happy && <p>Love learning Astro!</p>}
        {finished && <p>Finished this!</p>}
        {goal ==3 ? <p>3 days Done</p> : <p>Not 3</p>}

        JSX




